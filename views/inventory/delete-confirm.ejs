<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<form id="deleteForm" class="Form" action="/inv/delete" method="post">
    
    <label for="inv_make">Make sure this is the vehicle make</label>
    <input type="text" readonly id="inv_make" name="inv_make" required
    value="<%= locals.inv_make %>"><br>

    <label for="inv_model">Make sure this is the vehicle model</label>
    <input type="text" readonly id="inv_model" name="inv_model" required
    value="<%= locals.inv_model %>"><br>

    <label for="inv_year">Make sure this is the vehicle year</label>
    <input type="number" readonly id="inv_year" name="inv_year" min="1900" max="2025" required
    value="<%= locals.inv_year %>"><br>

    <label for="inv_price">Make sure this is the vehicle price </label>
    <input type="number" readonly id="inv_price" name="inv_price" min="1" max="99999" required
    value="<%= locals.inv_price %>"><br>

    <p> Confirm Deletion - The delete is permanent.</p>
    <input type="submit" name="submit" value="Delete Vehicle">
    <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"<% } %>>
  </form>

