<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<form class="Form" action="/inv/add-inventory" method="post">
    
    <label for="inv_make">Type the vehicle make</label>
    <input type="text" id="inv_make" name="inv_make" required
    value="<%= locals.inv_make %>"><br>

    <label for="inv_model">Type the vehicle model</label>
    <input type="text" id="inv_model" name="inv_model" required
    value="<%= locals.inv_model %>"><br>

    <label for="inv_year">Type the vehicle year</label>
    <input type="number" id="inv_year" name="inv_year" min="1900" max="2025" required
    value="<%= locals.inv_year %>"><br>

    <label for="inv_description">Type the vehicle description</label>
    <input type="text" id="inv_description" name="inv_description" required
    value="<%= locals.inv_description %>"><br>
    
    <label for="inv_image">Upload the vehicle img</label>
    <input type="text" id="inv_image" name="inv_image" required
    value="/images/vehicles/no-image.jpg"><br>
    
    <label for="inv_thumbnail">Upload the vehicle thumbnail</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" required
    value="/images/vehicles/no-image-tn.jpg"><br>

    <label for="inv_price">Type the vehicle price (only numbers)</label>
    <input type="number" id="inv_price" name="inv_price" min="1" max="99999" required
    value="<%= locals.inv_price %>"><br>
    
    <label for="inv_miles">Type the vehicle miles (only numbers)</label>
    <input type="number" id="inv_miles" name="inv_miles" min="1" max="999999" required
    value="<%= locals.inv_miles %>"><br>

    <label for="inv_color">Type the vehicle color</label>
    <input type="text" id="inv_color" name="inv_color" required
    value="<%= locals.inv_color %>"><br>

    <label for="classification_id">Select the vehicle classification:</label>
    <%- classification_list %>

    <input type="submit" id="rButton" value="add vehicle">
</form>

